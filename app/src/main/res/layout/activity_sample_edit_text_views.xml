<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sample_edit_text_views"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.modelexam.samplecomponenetsapp.SampleEditTextViews">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/personNameView"
                android:hint="person name"
                android:inputType="textPersonName"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="personEditText"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Password"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="passwordClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Num Password"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/numericPasswordView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="numberPasswordClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="emailClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phoneView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="phoneNumberClick"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Postal Address"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/addressView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="postalClick"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Multi Line"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/multilineView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="multilineClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Time"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/timeView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="timeClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Date"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/dateView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="dateClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Number (signed)"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/numberView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="numSignedClick"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="#eee"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Num (Decimal)"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/numberDecimalView"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="click"
                android:onClick="numDecimalClick"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
